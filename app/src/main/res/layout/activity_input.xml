<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_goods"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp"
    android:gravity="center">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="شناسه زیبال را وارد کنید."
        />
    <EditText
        android:maxLength="13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/topup_amount"
        android:layout_marginTop="10dp"
        android:hint="0"
        android:textAlignment="center"
        android:background="#E0F2F1"
        android:textColor="#000000"
        android:layout_below="@+id/textView"
        android:padding="8dp"
        android:numeric="integer"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="پرداخت"
        android:id="@+id/start_payment"
        android:textColor="#FFF"
        android:layout_below="@+id/topup_amount"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:paddingRight="10dp"
        android:paddingBottom="4dp"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/topup_amount"
        android:layout_alignEnd="@+id/topup_amount"
        android:layout_alignLeft="@+id/topup_amount"
        android:layout_alignStart="@+id/topup_amount"
        android:background="@drawable/button_selector"/>
</RelativeLayout>
